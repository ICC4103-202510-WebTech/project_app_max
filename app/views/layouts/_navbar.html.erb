                  <span>Sign out</span>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: 'nav-link d-flex align-items-center gap-2' do %>
              <i class="bi bi-box-arrow-in-right"></i>
              <span>Sign in</span>
