<nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
  <div class="container-fluid px-4">
    <%= link_to root_path, class: 'navbar-brand d-flex align-items-center gap-2' do %>
      <i class="bi bi-kanban text-primary"></i>
      <span class="fw-semibold">Project Manager</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <%= link_to projects_path, class: "nav-link d-flex align-items-center gap-2 #{current_page?(projects_path) ? 'active' : ''}" do %>
          <i class="bi bi-folder"></i>
          <span>Projects</span>
        <% end %>
      </ul>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle"></i>
              <span><%= current_user.email %></span>
            </a>
