              <li>
                <%= link_to edit_user_registration_path, class: 'dropdown-item d-flex align-items-center gap-2' do %>
                  <i class="bi bi-gear"></i>
                  <span>Settings</span>
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to destroy_user_session_path, method: :delete, class: 'dropdown-item d-flex align-items-center gap-2 text-danger' do %>
