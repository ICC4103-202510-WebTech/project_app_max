<%= form_with(model: project, class: "needs-validation") do |form| %>
  <% if project.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <div class="d-flex align-items-center gap-2">
        <i class="bi bi-exclamation-triangle-fill text-danger"></i>
        <h5 class="alert-heading mb-0"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h5>
      </div>
      <ul class="list-unstyled mb-0 mt-2 ps-4">
        <% project.errors.each do |error| %>
          <li><i class="bi bi-dot me-2"></i><%= error.full_message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-12">
      <div class="form-floating">
        <%= form.text_field :name, class: "form-control", placeholder: "Project name" %>
        <%= form.label :name, class: "form-label" %>
      </div>
    </div>

    <div class="col-12 d-flex gap-2 justify-content-end mt-4">
      <%= link_to projects_path, class: "btn btn-outline-secondary d-flex align-items-center gap-2" do %>
        <i class="bi bi-arrow-left"></i>
        <span>Back</span>
      <% end %>
      <%= button_tag(type: 'submit', class: "btn btn-primary d-flex align-items-center gap-2") do %>
        <i class="bi bi-check-lg"></i>
        <span>Create Project</span>
      <% end %>
    </div>
  </div>
<% end %>
