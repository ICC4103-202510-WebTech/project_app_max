<div class="container-fluid p-4">
  <div class="row g-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h4 class="mb-0">Projects</h4>
          <p class="text-muted small mb-0">Manage your projects</p>
        </div>
        <%= link_to new_project_path, class: 'btn btn-primary d-flex align-items-center gap-2' do %>
          <i class="bi bi-plus-lg"></i>
          <span>New Project</span>
        <% end %>
      </div>

      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="bg-light">
                <tr>
                  <th class="border-0 ps-4">Project</th>
                  <th class="border-0">Tasks</th>
                  <th class="border-0 text-end pe-4">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if @projects.any? %>
                  <% @projects.each do |project| %>
                    <tr>
                      <td class="ps-4">
                        <div class="d-flex align-items-center gap-3">
                          <i class="bi bi-folder text-primary"></i>
                          <%= link_to project.name, project, class: 'text-decoration-none text-dark fw-medium' %>
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-secondary rounded-pill">
                          <%= project.tasks.count %> tasks
                        </span>
                      </td>
                      <td class="text-end pe-4">
                        <div class="btn-group">
                          <%= link_to project, class: 'btn btn-outline-primary btn-sm' do %>
                            <i class="bi bi-eye"></i>
                          <% end %>
                          <%= link_to edit_project_path(project), class: 'btn btn-outline-primary btn-sm' do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= button_to project_path(project), 
                              method: :delete, 
                              class: 'btn btn-outline-danger btn-sm',
                              form: { class: 'd-inline-block' },
                              data: { turbo_confirm: 'Are you sure you want to delete this project and all its tasks?' } do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="3" class="text-center text-muted py-4">
                      <i class="bi bi-folder-x fs-2 d-block mb-2"></i>
                      No projects yet
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
