<div class="row mb-4">
  <div class="col-6">
    <h1>Projects</h1>
  </div>
  <div class="col-6 text-end">
    <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td class="text-end">
              <%= link_to 'Show', project, class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', project, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
