<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h1>Project Details</h1>
    <%= link_to 'New Task', new_project_task_path(@project), class:'btn btn-primary'%>
  </div>
  
  <div class="card-body">
    <h5 class="card-title"><%= @project.name %></h5>
  </div>

  <div class="card-body">
    <h5 class="card-title">Tasks</h5>
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @project.tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><span class="<%= task.status_badge %>"><%= task.status.humanize %></span></td>
            <td class="text-end">
              <%= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-warning btn-sm me-2' %>
              <%= button_to 'Delete', project_task_path(@project, task), 
                  method: :delete, 
                  class: 'btn btn-danger btn-sm',
                  form: { style: 'display: inline-block' },
                  data: { turbo_confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer">
    <%= link_to 'Edit Project', edit_project_path(@project), class: 'btn btn-warning' %>
    <%= link_to 'Back', projects_path, class: 'btn btn-secondary' %>
  </div>
</div>
