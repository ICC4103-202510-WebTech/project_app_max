<div class="card mb-4">
  <div class="card-header">
    <h1>Project Details</h1>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @project.name %></h5>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-warning' %>
    <%= link_to 'Back', projects_path, class: 'btn btn-secondary' %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        <h2>Tasks</h2>
      </div>
      <div class="col-6 text-end">
        <%= link_to 'New Task', new_task_path(project_id: @project.id), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @project.tasks.each do |task| %>
          <tr>
            <td><%= link_to task.name, task_path(task) %></td>
            <td><span class="badge bg-<%= task.status == 'completed' ? 'success' : (task.status == 'in_progress' ? 'warning' : 'secondary') %>"><%= task.status.humanize %></span></td>
            <td class="text-end">
              <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
