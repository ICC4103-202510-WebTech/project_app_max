<div class="row mb-4">
  <div class="col-6">
    <h1>Tasks</h1>
  </div>
  <div class="col-6 text-end">
    <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Project</th>
          <th>Status</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= link_to task.project.name, project_path(task.project) %></td>
            <td><span class="badge bg-<%= task.status == 'completed' ? 'success' : (task.status == 'in_progress' ? 'warning' : 'secondary') %>"><%= task.status.humanize %></span></td>
            <td class="text-end">
              <%= link_to 'Show', task, class: 'btn btn-info btn-sm' %>
              <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
              <%= link_to 'Delete', task, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
