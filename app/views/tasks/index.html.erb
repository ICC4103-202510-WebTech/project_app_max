<div class="row mb-4">
  <div class="col-6">
    <h1>Tasks</h1>
  </div>
</div>

<%= link_to 'Create', new_task_path, class:'btn btn-primary btn-sm'%>


<div class="card">
  <div class="card-body">
    <table class="table table-striped mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Project</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.status %></td>
            <td><%= link_to task.project.name, project_path(task.project) %></td>
            <td class="text-end">
                <%= link_to 'Show', task, class: 'btn btn-info btn-sm' %>
                <%= link_to 'Edit', edit_task_path(task), class:'btn btn-primary btn-sm'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>